#include <iostream>
using namespace std;
int n = 6; int j = 0; int k; int c = 0;
int main()
{
    int a[6] = { 2, 13, 5, -50, -24, 4 };
    int b[6] = {};
    int p[6] = {};
    while (j < 6) {
        for (int q = n - 1; q >= 0; q--) {
            if (a[q] % 2 != 0) {
                k = a[q];
                break;
            }
            else {
                k = 0;
                j++;
            }
        }
    }
    cout << "Last element = " << k << endl;
    for (int i = 0; i < n; i++) {
        if (a[i] % 2 != 0) {
            b[i] = k;
        }
        else {
            b[i] = 0;
        }
    }
    for (int t = 0; t < n; t++) {
        p[t] = a[t] + b[t];
        cout << p[t] << ", ";
    }
}
