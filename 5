#include <iostream>
using namespace std;
int n = 6; int k;
int main()
{
    int a[6] = { 5, 0, 4, 6, 60, 70 };
    int b[6] = {};
    for (int q = 1; q < n; q++) {
        if (a[0] < a[q]) {
            k = q - 1;
            break;
        }
    }
    for (int q = 0; q < k; q++) {
        b[q] = a[q + 1];
        cout << b[q] << ", ";
    }
    b[k] = a[0];
    cout << b[k] << ", ";
    for (int q = k + 1; q < n; q++) {
        b[q] = a[q];
        cout << b[q] << ", ";
    }
}
